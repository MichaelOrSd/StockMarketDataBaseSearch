<html>
  <%- include('./partials/header.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <main>
      <h1 id="postgresh1">Search PostgreSQL Database</h1>
      <form action="/postgres/" method="POST">
        <div>
          <label id="postgreslabel" for="search"
            >Stock market ie: "NASDAQ"</label
          >
        </div>
        <div>
          <input type="search" id="searchpostgres" name="search" required />
        </div>
        <button id="postgresbutton" type="submit">Search</button>
        <p id="error">
          <% if(messages.error) { %> <%= messages.error %> <% } %>
        </p>
      </form>
      <div id="filter">
        <p id="p1"><strong>MARKET</strong></p>
        <p id="p2" class="stockName"><strong>NAME</strong></p>
        <p id="p3" class="stockSymbol"><strong>SYMBOL</strong></p>
        <p id="p4"><strong>CAP</strong></p>
      </div>
      <div id="resultContainer">
        <% if(easterEgg) { %> 
          <img src="<%= easterEgg %>" /> 
        <% } %>
        <% if (searchByMarket.length > 0) { %>
        <%searchByMarket.forEach(stock=>{%>
        <div class="stockInfo">
          <p><%= stock.stock_market %></p>
          <div class="stockName"><p><%= stock.stock_name %></p></div>
          <div class="stockSymbol"><p><%= stock.stock_symbol %></p></div>
          <p><%= stock.stock_cap %></p>
        </div>
        <% }) %> <% } %> <% if ( searchByName.length > 0) { %> 
        <%searchByName.forEach(stock=>{%>
        <div class="stockInfo">
          <p><%= stock.stock_market %></p>
          <div class="stockName"><p><%= stock.stock_name %></p></div>
          <div class="stockSymbol"><p><%= stock.stock_symbol %></p></div>
          <p><%= stock.stock_cap %></p>
        </div>
        <% }) %> <% } %> <% if ( searchBySymbol.length > 0) { %> 
        <%searchBySymbol.forEach(stock=>{%>
        <div class="stockInfo">
          <p><%= stock.stock_market %></p>
          <div class="stockName"><p><%= stock.stock_name %></p></div>
          <div class="stockSymbol"><p><%= stock.stock_symbol %></p></div>
          <p><%= stock.stock_cap %></p>
        </div>
        <% }) %> <% } %>
      </div>
      <%- include('./partials/footer.ejs') %>
    </main>
  </body>
</html>
